#!/bin/bash

function append_to_var {
    local name="$1"
    local suffix="$2"
    [[ "${suffix}" = "" ]] && return 0
    local content=$(eval echo \$${name})
    if [[ "${content}" = "" ]]; then
        export "${name}=${suffix}"
    else
        export "${name}=${content}:${suffix}"
    fi
}

function prepend_to_var {
    local name="$1"
    local prefix="$2"
    [[ "${suffix}" = "" ]] && return 0
    local content=$(eval echo \$${name})
    if [[ "${content}" = "" ]]; then
        export "${name}=${prefix}"
    else
        export "${name}=${prefix}:${content}"
    fi
}

export EDITOR="nano"
export DOTNET_CLI_TELEMETRY_OPTOUT='1'
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

prepend_to_var "PATH" "/opt/local/bin:${HOME}/opt/cross/bin:${HOME}/.local/bin:${HOME}/.local/intellij/bin"
prepend_to_var "LD_LIBRARY_PATH" "/usr/local/lib:${HOME}/.local/lib"
prepend_to_var "C_INCLUDE_PATH" "/usr/local/include:${HOME}/.local/include}"
prepend_to_var "CPLUS_INCLUDE_PATH" "/usr/local/include:${HOME}/.local/include"

[[ "x$(uname -r | grep Microsoft)" != "x" ]] && export DISPLAY=":0"