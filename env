#!/bin/bash

export EDITOR="nano"
export DOTNET_CLI_TELEMETRY_OPTOUT='1'
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

__PREFIX_PATH="/opt/local/bin:${HOME}/opt/cross/bin:${HOME}/.local/bin:${HOME}/.local/intellij/bin"
__PREFIX_LD_LIBRARY_PATH="/usr/local/lib:${HOME}/.local/lib"
__PREFIX_C_INCLUDE_PATH="/usr/local/include:${HOME}/.local/include"
__PREFIX_CPLUS_INCLUDE_PATH="/usr/local/include:${HOME}/.local/include"

if [[ "$PATH" = "" ]]; then
    export PATH="$__PREFIX_PATH"
else
    export PATH="$__PREFIX_PATH:$PATH"
fi

if [[ "$LD_LIBRARY_PATH" = "" ]]; then
    export LD_LIBRARY_PATH="$__PREFIX_LD_LIBRARY_PATH"
else
    export LD_LIBRARY_PATH="$__PREFIX_LD_LIBRARY_PATH:$LD_LIBRARY_PATH"
fi

if [[ "$C_INCLUDE_PATH" = "" ]]; then
    export C_INCLUDE_PATH="$__PREFIX_C_INCLUDE_PATH"
else
    export C_INCLUDE_PATH="$__PREFIX_C_INCLUDE_PATH:$C_INCLUDE_PATH"
fi

if [[ "$CPLUS_INCLUDE_PATH" = "" ]]; then
    export CPLUS_INCLUDE_PATH="$__PREFIX_CPLUS_INCLUDE_PATH"
else
    export CPLUS_INCLUDE_PATH="$__PREFIX_CPLUS_INCLUDE_PATH:$CPLUS_INCLUDE_PATH"
fi


[[ "x$(uname -r | grep Microsoft)" != "x" ]] && export DISPLAY=":0"
